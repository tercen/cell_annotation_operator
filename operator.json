{
  "name": "Cell Annotation",
  "description": "Annotates clusters based on marker enrichment scores using a reference table of marker vs. cell population correspondence.",
  "tags": [
    "flow cytometry",
    "cluster annotation",
    "preprocessing"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/cell_annotation_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "P-value threshold",
      "defaultValue": 0.05,
      "description": "P-value threshold"
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Marker",
            "type": "",
            "description": "Marker identifiers (channel, marker)",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Cluster",
            "type": "",
            "description": "Cluster identifiers",
            "ontologyMapping": "group",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Enrichment score",
                "type": "numeric",
                "description": "Enrichment score per marker and cluster",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "Annotation Table",
                "type": "",
                "description": "Reference table with marker-population correspondence (documentId)",
                "ontologyMapping": "documentId",
                "crosstabMapping": "label",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "OperatorJoinSpec",
        "description": "Cluster annotation with best match and detailed probabilities",
        "joinOperators": [
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [
                "Cluster"
              ],
              "rColumns": [
                "Cluster"
              ]
            },
            "rightRelation": {
              "kind": "TableRelation",
              "description": "Best annotation per cluster",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "pop.name",
                  "type": "string"
                },
                {
                  "kind": "Attribute",
                  "name": "best.pop.pvalue",
                  "type": "double"
                },
                {
                  "kind": "Attribute",
                  "name": "best.pop.probability",
                  "type": "double"
                },
                {
                  "kind": "Attribute",
                  "name": "pop.list",
                  "type": "string"
                }
              ]
            }
          },
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [
                "Cluster"
              ],
              "rColumns": [
                "Cluster"
              ]
            },
            "rightRelation": {
              "kind": "TableRelation",
              "description": "Detailed probability per cluster-population pair",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "pop.name",
                  "type": "string"
                },
                {
                  "kind": "Attribute",
                  "name": "best.pop.probability",
                  "type": "double"
                },
                {
                  "kind": "Attribute",
                  "name": "best.pop.pvalue",
                  "type": "double"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}